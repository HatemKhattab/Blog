<%=form_for @post do |f|%>
<%if @post.errors.any?%>
<h2>Errors:</h2>
<ul>
  <%@post.errors.full_messages.each do |message|%>
  <li><%=message%></li>
  <%end%>
</ul>
<%end%>
  <p>
    <%= f.label :titel%></br>
    <%= f.text_field :title%></br></br>
    <%= f.label :content%></br>
    <%= f.text_area :content%></br></br>
    <%= f.submit "Add aNew Post"%>
  </p>
<%end%>